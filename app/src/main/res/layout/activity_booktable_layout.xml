<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_bb_color">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_bb_color"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_item_cart">

                <ImageView
                    android:id="@+id/image_restaurant"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_res_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_40"
                        android:gravity="center"
                        android:text="@string/restaurant_name"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_text_size_20"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_phone_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/margin_35"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="@string/hint_number"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_text_size_18"/>

                    <TextView
                        android:id="@+id/text_call_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/margin_pading_10"
                        android:layout_marginLeft="@dimen/margin_20"
                        android:text="@string/book_via_center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/common_text_size_18"/>

                    <Button
                        android:id="@+id/button_call_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/margin_pading_10"
                        android:layout_marginRight="@dimen/margin_20"
                        android:background="@drawable/background_button"
                        android:drawableRight="@drawable/ic_arrow_forward_black"
                        android:text="@string/goi"
                        android:textColor="@android:color/white"/>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_101"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_height_50"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="@string/count_people"
                        android:textColor="@color/text_color4"/>

                    <TextView
                        android:layout_width="@dimen/width_height_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/bg_bb_color"/>

                    <Button
                        android:id="@+id/button_left_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_left_black"/>

                    <TextView
                        android:id="@+id/text_count_people"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="2"
                        android:textColor="@color/text_color5"
                        android:textSize="@dimen/common_text_size_20"/>

                    <Button
                        android:id="@+id/button_right_back"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_right_black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_height_50"
                    android:layout_marginTop="@dimen/width_height_1"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="@string/kid"
                        android:textColor="@color/text_color4"/>

                    <TextView
                        android:layout_width="@dimen/width_height_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/bg_bb_color"/>

                    <Button
                        android:id="@+id/button_left_back_kid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_left_black"/>

                    <TextView
                        android:id="@+id/text_count_kid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="2"
                        android:textColor="@color/text_color5"
                        android:textSize="@dimen/common_text_size_20"/>

                    <Button
                        android:id="@+id/button_right_back_kid"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_right_black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_101"
                android:layout_marginTop="@dimen/margin_20"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_height_50"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="@string/day_in"
                        android:textColor="@color/text_color4"/>

                    <TextView
                        android:layout_width="@dimen/width_height_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/bg_bb_color"/>

                    <Button
                        android:id="@+id/button_left_back_dayin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_left_black"/>

                    <TextView
                        android:id="@+id/text_dayin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="@string/date_date"
                        android:textColor="@color/text_color5"
                        android:textSize="@dimen/common_text_size_20"/>

                    <Button
                        android:id="@+id/button_right_back_dayin"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_right_black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_height_50"
                    android:layout_marginTop="@dimen/width_height_1"
                    android:background="@android:color/white">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="@string/time_gotoshop"
                        android:textColor="@color/text_color4"/>

                    <TextView
                        android:layout_width="@dimen/width_height_1"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/margin_5"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@color/bg_bb_color"/>

                    <Button
                        android:id="@+id/button_left_back_timein"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_left_black"/>

                    <TextView
                        android:id="@+id/text_time_in"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:paddingLeft="@dimen/margin_pading_10"
                        android:text="@string/time_time"
                        android:textColor="@color/text_color5"
                        android:textSize="@dimen/common_text_size_20"/>

                    <Button
                        android:id="@+id/button_right_back_timein"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_right_black"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_height_70"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@android:color/white"
                android:padding="@dimen/margin_pading_10">

                <EditText
                    android:id="@+id/edit_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/bg_bg_color"
                    android:hint="@string/fill_note"
                    android:padding="@dimen/margin_pading_10"
                    android:textColor="@color/text_color2"
                    android:textColorHint="@color/hint_color2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/login_other_booktable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin"
                android:background="@drawable/background_button"
                android:paddingRight="@dimen/layout_margin"
                android:text="@string/login_with_other"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/common_text_size_18"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/bg_btt_color"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_continuee"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/width_height_50"
            android:text="@string/continuee"
            android:background="@color/bg_btt_color"
            android:textColor="@android:color/white"/>
    </LinearLayout>

</RelativeLayout>