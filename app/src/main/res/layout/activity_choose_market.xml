<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="close">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_search_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white">

                <RelativeLayout
                    android:id="@+id/rl_container_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10dp"
                    android:background="@color/white"
                    android:elevation="@dimen/common_size_2"
                    android:padding="@dimen/padding_10dp">

                    <LinearLayout
                        android:id="@+id/ll_search_alwayshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <AutoCompleteTextView
                                android:id="@+id/actv_search_input"
                                android:layout_width="0dp"
                                android:completionThreshold="1"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                            <android.support.v7.widget.LinearLayoutCompat
                                android:id="@+id/acib_search_action"
                                android:layout_width="@dimen/button_size"
                                android:layout_height="match_parent"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/img_button_search"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/places_ic_search" />
                            </android.support.v7.widget.LinearLayoutCompat>
                        </LinearLayout>

                        <android.support.v7.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:elevation="@dimen/common_size_2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:elevation="@dimen/common_size_2"
                                        android:text="@string/ten_cua_hang"
                                        android:textSize="@dimen/text_small_size"
                                        android:textColor="@color/pink_500"/>

                                    <TextView
                                        android:id="@+id/actv_preview_name_market"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_20dp"
                                        android:layout_marginRight="@dimen/margin_20dp"
                                        android:elevation="@dimen/common_size_2"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_medium_size"
                                        android:layout_marginTop="@dimen/margin_10dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:elevation="@dimen/common_size_2"
                                        android:text="@string/dia_diem_cua_hang"
                                        android:textSize="@dimen/text_small_size"
                                        android:textColor="@color/pink_500"/>

                                    <TextView
                                        android:id="@+id/actv_preview_place_market"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_20dp"
                                        android:layout_marginRight="@dimen/margin_20dp"
                                        android:elevation="@dimen/common_size_2"
                                        android:singleLine="true"
                                        android:textSize="@dimen/text_medium_size"
                                        android:layout_marginTop="@dimen/margin_10dp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_search_flexibleshow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_search_alwayshow"
                        android:layout_marginTop="@dimen/margin_15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tim_theo"
                            android:textSize="@dimen/text_medium_size"
                            android:textStyle="bold" />

                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/radio_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/ten_cua_hang"
                                android:textSize="@dimen/text_small_size" />

                            <RadioButton
                                android:id="@+id/radio_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/dia_diem_cua_hang"
                                android:textSize="@dimen/text_small_size" />
                        </RadioGroup>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_market"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_search_field" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/comon_size_300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include layout="@layout/nav_header" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_navigation_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>